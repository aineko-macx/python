
def is_palindrome(word):


    if len(word) == 0 or len(word) == 1:
        print("Palindrome")
        return True
    elif word[0] != word[-1]:
        print("False")
        return False
    else:
        print("trying", word[1:-1])
        is_palindrome(word[1:-1])
 
